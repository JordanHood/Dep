all:
	-apt update -y
	-apt install curl -y
	-curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.33.8/install.sh | bash
	-sleep 5
	-export NVM_DIR="$HOME/.nvm"
	-sleep 5
	-[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
	-sleep 5
	-[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"
	-sleep 5
	-nvm install 8 
	-npm install